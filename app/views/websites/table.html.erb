<h1>Listing websites</h1>

<table class="table">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Link</th>
      <th>Desc</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.owner %></td>
        <td><%= link_to website.link, website.link %></td>
        <td><%= website.desc %></td>
        <td><%= website.id %></td>
        <td><%= link_to 'Show', website, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_website_path(website), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Website', new_website_path %>
